@model IEnumerable<Tarefas.Models.TaskModel>;
@{
    ViewData["Tittle"] = "Home";
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Minha Lista de Tarefas</title>
    <link rel="stylesheet" href="@Url.Content("~/css/homeStyles.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/getTasks.css")" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
</head>

<body>
    <div class="ogn-form">
        <h1>Lista de Tarefas</h1>
        <table class="task-table">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Descrição</th>
                    <th>Data Limite</th>
                    <th>Concluído</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarefa in Model)
                {
                    <tr>
                        <td>@tarefa.TaskTittle</td>
                        <td>@tarefa.TaskDescription</td>
                        <td>@tarefa.TaskDeadline.ToString("dd/MM/yyyy")</td>
                        <td><input type="checkbox" class="checkbox-tarefa" data-tarefa-id="@tarefa.TaskId" /></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>
