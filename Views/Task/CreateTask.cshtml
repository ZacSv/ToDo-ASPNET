@model IEnumerable<Tarefas.Models.TaskModel>;
@{
    ViewData["Tittle"] = "Home";
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Minha Lista de Tarefas</title>
    <link rel="stylesheet" href="@Url.Content("~/css/homeStyles.css")" />
</head>

<body>
    <div class="ogn-form">
        <h1>Minha Lista de Tarefas</h1>
        <form method="post" action="/Task/CreateTask" id="adicionarTarefa">
            <label for="tituloTarefa">Título:</label>
            <input type="text" id="tituloTarefa" name="TaskTittle" required />

            <label for="descricaoTarefa">Descrição:</label>
            <textarea id="descricaoTarefa" name="TaskDescription" rows="5"></textarea>

            <label for="dataLimiteTarefa">Data Limite:</label>
            <input type="date" id="dataLimiteTarefa" name="TaskDeadline" required />
            <button type="submit">Adicionar Tarefa</button>
        </form>
        <a href="@Url.Action("GetTasks", "Task")" class="btn btn-primary btn-block">Ver tarefas</a>
    </div>
</body>

</html>
